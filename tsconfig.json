{
    "include": ["src/**/*/*.ts","src/**/*.ts","src/*.ts"],
    "output": "./dist/",
    "paths": {
        "src/*": ["src/*","src/*/*"]
    },
    "compilerOptions": {
        "outDir": "build/compiled",
        "lib": [ "es6" ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [ "build", "node_modules" ]
}